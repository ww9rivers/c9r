# -*- mode: python; -*-

Tests for class Null(object):

    >>> from jsonpy import Null, Thingy
    >>> nx = Null()
    >>> nx.items()
    []
    >>> nx.__repr__()
    "<class 'jsonpy.Null'>({})"
    >>> nx.__str__()
    '{}'
    >>> nx.new_attr = 'abcde'
    >>> nx.new_attr
    'abcde'


Tests for class Thingy(Null):

    >>> xo = Thingy(dict(a='aaa', b='bbb'))
    >>> xo.a
    'aaa'
    >>> xo.items()
    [('a', 'aaa'), ('b', 'bbb')]
    >>> from StringIO import StringIO
    >>> x1 = Thingy(StringIO('{ "a" : "A-value", "b" : "B-value" }'))
    >>> x1.b
    'B-value'
    >>> isinstance(x1, dict)
    False
    >>> isinstance(x1, object)
    True
    >>> isinstance(x1, Null)
    True
